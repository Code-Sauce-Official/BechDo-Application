<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.introactivity.IntroFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_gravity="center"
            android:src="@drawable/click_photo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/capture_amp_upload_the_item_s_photo"
            android:textColor="#312E5F"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/description"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/upload_three_to_four_photos_of_the_item_for_clarity"
            android:textColor="#E3386A"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:backgroundTint="#4DE3386A"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#E3386A"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#4DE3386A"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#4DE3386A"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp" />

    </LinearLayout>
</RelativeLayout>